<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ginbro.View.AIConfigurationPage"
             Title="Exercise Templates">
    <Grid>
        <CollectionView x:Name="TemplatesCollectionView"
                        ItemsSource="{Binding ExerciseTemplates}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10"
                           BorderColor="Gray"
                           CornerRadius="5">
                        <Label Text="{Binding Name}"
                               FontSize="Medium"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Add Template"
                Clicked="AddTemplateButton_Clicked"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="0,0,0,20" />
    </Grid>
</ContentPage>